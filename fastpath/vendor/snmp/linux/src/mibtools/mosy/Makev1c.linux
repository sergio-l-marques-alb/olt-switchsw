###############################################################################
# Programs and Libraries
###############################################################################


LIBOBJS = $(OSOBJDIR)/asprntf.o $(OSOBJDIR)/sprntb.o $(OSOBJDIR)/serror.o $(OSOBJDIR)/oid_cmp.o $(OSOBJDIR)/oid_cpy.o $(OSOBJDIR)/oid_free.o \
	  $(OSOBJDIR)/sprntoid.o

UTILDIR	   =	./
AGTNAME	   =	unix

SNMPINCDIR = \
             -I$(TOPDIR)/include
SECLIBDIR  =    $(TOPDIR)/seclib
MGRDIR     = $(TOPDIR)/config/mgr


OSCFLAGS     =    -DSVR4 -DSYS5 -DSYSV -DLINUX
LEXFLAGS     =    -l


DEBUG = -DSR_DEBUG

CFLAGS = \
	$(DEBUGFLAGS) \
	$(DEBUG) \
	-I. \
	-I$(OSOBJDIR) \
	$(SNMPINCDIR) \
	$(OSCFLAGS) \
	$(SYSOPTS) \
	$(EXTRA_DEFS)


###############################################################################
# Files
###############################################################################

HFILES	=	mosydefs.h 
YFILES	=	yacc.y lex.l


##################################################################
# Here it is...
##################################################################

PREMOSY = $(OSOBJDIR)/premosy$(BINEXT)
MOSY = $(OSOBJDIR)/mosy$(BINEXT)
YACC_O = yacc.o

all: $(BINDIR) $(OSOBJDIR) $(SOURCELINKS) $(PREMOSY) $(MOSY)

$(BINDIR):
	-mkdir $(BINDIR)

$(OSOBJDIR):
	-mkdir $(OSOBJDIR)


##################################################################
# premosy
##################################################################

$(PREMOSY):	$(OSOBJDIR)/premosy.o
	$(LD) $(LDFLAGS) -o $@ $(OSOBJDIR)/premosy.o
	$(CP) $(PREMOSY) $(BINDIR)/premosy$(BINEXT)

$(OSOBJDIR)/premosy.o: premosy.c
	$(CORULE)


##################################################################
# mosy
##################################################################
MOSYOBJS = $(OSOBJDIR)/mosy.o $(OSOBJDIR)/pepymisc.o $(OSOBJDIR)/mosyvrsn.o $(OSOBJDIR)/yacc.o

MOSYLIBS = $(LIBOBJS) $(LSOCKET) -lm

$(MOSY): $(LIBOBJS) $(OSOBJDIR)/pepymisc.o $(OSOBJDIR)/mosyvrsn.o $(OSOBJDIR)/$(YACC_O) $(OSOBJDIR)/mosy.o
	$(LD) $(LDFLAGS) -o $@ $(MOSYOBJS) $(MOSYLIBS)
	$(CP) $(MOSY) $(BINDIR)/mosy$(BINEXT)

$(OSOBJDIR)/mosyvrsn.o: $(OSOBJDIR)/mosyvrsn.c
	$(YACCRULE)

$(OSOBJDIR)/mosy.o: mosy.c $(HFILES)
	$(CORULE)

$(OSOBJDIR)/pepymisc.o:	pepymisc.c
	$(CORULE)


$(OSOBJDIR)/mosyvrsn.c:	$(OSOBJDIR)/mosy.o $(OSOBJDIR)/$(YACC_O) $(OSOBJDIR)/pepymisc.o
	@$(UTILDIR)version.sh mosy > $@

$(OSOBJDIR)/yacc.o: $(OSOBJDIR)/yacc.c $(OSOBJDIR)/lex.c $(HFILES)
	$(YACCRULE)

$(OSOBJDIR)/yacc.c:		yacc.y
	-@echo "expect 24 shift/reduce and 11 reduce/reduce conflicts"
	$(YACC) $(YACCFLAGS) yacc.y
	-mv y.tab.c $@

$(OSOBJDIR)/lex.c:		lex.l
	$(LEX) $(LEXFLAGS) lex.l
	-sed 's/^#define YY_BUF_SIZE 16384$\/#define YY_BUF_SIZE 32768/g' < lex.yy.c > /tmp/tmpfile.xxx
	-cp /tmp/tmpfile.xxx $@
	-rm /tmp/tmpfile.xxx
	-rm lex.yy.c


#l-mosy:		yacc.c lex.c true
#		$(LINT) $(LFLAGS) mosy.c yacc.c \
#		    pepymisc.c mosyvrsn.c $(LLIBS) \
#			| grep -v "warning: possible pointer alignment problem"

lint:
	-$(LINT) $(LINTOPTS) -I. -I$(OSOBJDIR) -I../../include postmosy.c $(AGENTFILE_C) output.c \
	-$(TOPDIR)/lib/$(LLIB)mgruser.ln \
	-$(TOPDIR)/lib/$(LLIB)snmp.ln | \
	-grep -v "possible pointer alignment problem"

################################################################
# misc objects
################################################################

$(OSOBJDIR)/asprntf.o: asprntf.c
	$(CORULE)

$(OSOBJDIR)/sprntb.o: sprntb.c
	$(CORULE)

$(OSOBJDIR)/serror.o: serror.c
	$(CORULE)

$(OSOBJDIR)/oid_cmp.o: oid_cmp.c
	$(CORULE)

$(OSOBJDIR)/oid_cpy.o: oid_cpy.c
	$(CORULE)

$(OSOBJDIR)/oid_free.o: oid_free.c
	$(CORULE)

$(OSOBJDIR)/sprntoid.o: sprntoid.c
	$(CORULE)

################################################################
# clean
################################################################

clean:
	-$(RM) $(OSOBJDIR)/* *.$(LIBEXT) x* z* _* core $(OSOBJDIR)/yacc.c \
	version.local \
	$(OSOBJDIR)/lex.c $(OSOBJDIR)/mosyvrsn.c *.def
	-$(RM) version.major
	-$(RM) version.minor
	-rmdir $(OSOBJDIR)

