TOPDIR     =    ../..

# 
# Operating System Information
#

RM = rm -f
RMDIR = rmdir
MOVE = mv
CP = cp
CAT = cat
MKDIR = mkdir
# PRESERVE is the flag to $(CP) to duplicate the modification time and
# permission modes of the original file or directory.
PRESERVE = -p


# Extensions to certain kinds of files are set here.
LIBEXT = a
BINEXT =
OBJEXT = o


LIBPRF = lib


              OS = -DLINUX
              os = linux
      SR_OSTYPE =
         OSFLAGS =
      SOCKETLIBS =
            LLIB =
      LINTLIBOPT =
        LINTOPTS =
     THREAD_LIBS = -lpthread
     SR_SEM_LIBS = -lrt
      EXTRA_DEFS = 


              CC = cc
              LD = cc
      DEBUGFLAGS = -g -Wall -fno-builtin -Wpointer-arith -Wstrict-prototypes
            LINT = lint
              AR = ar
             LEX = flex
            YACC = yacc
          AROPTS = cr
          RANLIB = touch

      EXTRA_SRCS =
      EXTRA_OBJS =

# for shared libraries
DYNCFLAGS = -fPIC
DYNLDFLAGS = -shared
DYN_LINK_FLAGS = -rdynamic
DYNLDLIBS =
DYNLD = ld 
DYN_LIB_LIBS = -ldl
SHLIBPRF = lib
SHLIBEXT = so
IPC_DEFAULT = -DSR_UDS_IPC
IPC_DEFAULT_LIB = uds


#
# Directories
#


OBD_V1 = 1

OBD_V2c = c

OBD_V3 =

OSBASEDIR = v$(OBD_V1)$(OBD_V2c)$(OBD_V3)


SRM_ARCH = $(shell /bin/arch)

OSLIBDIR = $(os)_$(SRM_ARCH)$(OSBASEDIR).lib
OSOBJDIR = $(os)_$(SRM_ARCH)$(OSBASEDIR).obj
OSBINDIR = $(os)_$(SRM_ARCH)$(OSBASEDIR).bin

SECUR_DIR = $(TOPDIR)/../basic

LIBDIR      = $(SECUR_DIR)/$(OSLIBDIR)
BINDIR      = $(SECUR_DIR)/$(OSBINDIR)
INSTALLDIR  = $(SECUR_DIR)/$(OSBINDIR)
MIBS_DIR    = $(TOPDIR)/mibs
RFCS_DIR    = $(TOPDIR)/mibs/rfcs
IDRAFTS_DIR = $(TOPDIR)/mibs/internet-drafts
IANA_DIR    = $(TOPDIR)/mibs/iana
MIBCOMP_DIR = $(SECUR_DIR)/$(OSBINDIR)

#
# Compile Commands
#


CORULE = $(CC) -c $(OSFLAGS) $(CFLAGS) -o $@ $(@F:.o=.c)
THREADRULE = $(CC) -c $(OSFLAGS) $(CFLAGS) -o $@ $(@F:.o=.c)
REMOTERULE = $(CC) -c $(OSFLAGS) $(CFLAGS) $(REMOTEFLAGS) -o $@ $(REMOTEDIR)/$(@F:.o=.c)
REMOTERULE2 = $(CC) -c $(OSFLAGS) $(CFLAGS) $(REMOTEFLAGS) -o $@ $(REMOTEDIR2)/$(@F:.o=.c)
MGRCORULE = $(CC) -c $(OSFLAGS) $(MGRCFLAGS) -o $@ $(@F:.o=.c)
YACCRULE = $(CC) -c $(OSFLAGS) $(CFLAGS) -o $@ $(OSOBJDIR)/$(@F:.o=.c)
MOSYRULE = $(CC) -c $(OSFLAGS) $(MGRCFLAGS) -o $@ $(SECLIBDIR)/$(@F:.o=.c)


#
# Compile Options
#

LIGHT = -DNOTICE
DEBUG = -DSR_DEBUG
SR_MIB_TABLE_HASHING = -DSR_MIB_TABLE_HASHING
SR_CONFIG_FP = -DSR_CONFIG_FP
PROXY =
SETS = -DSETS
WEB_AGT =
WEB_MGR =

CUSTOMER_DEFINES =

epictest := EPICTEST = -DSR_EPICTEST
EPIC = -DSR_EPIC

EXPORT = -DSR_UNSECURABLE

SNMP_V1_PACKET = -DSR_SNMPv1_PACKET -DSR_SNMPv1_WRAPPER

SNMP_V2C_PACKET = -DSR_SNMPv2c_PACKET -DSR_SNMPv1_WRAPPER -DSR_SNMPv2_PDU

SNMP_V1_PACKET_MIB = -DSR_SNMPv1_PACKET_MIB

SNMP_V3_PACKET =
SNMP_V3_PACKET_MIB =

SYS_OR_TABLE =

TRANSPORT_TABLE = -DSR_TRANSPORT_TABLE


NOTIFY_COMPLIANCE_LEVEL = \
	-DSR_NOTIFY_FULL_COMPLIANCE

PROXY_COMPLIANCE_LEVEL =

SNMPV3_COMPLIANCE_OPTIONS = \
	$(NOTIFY_COMPLIANCE_LEVEL) \
	$(PROXY_COMPLIANCE_LEVEL)

USER_SEC_MODEL =

SUPPORTED_SECURITY_MODELS = \
	$(USER_SEC_MODEL)

3DES_PRIVACY_PROTOCOL =
AES_PRIVACY_PROTOCOL =

SUPPORTED_PRIVACY_PROTOCOLS = \
	$(3DES_PRIVACY_PROTOCOL) \
	$(AES_PRIVACY_PROTOCOL)


MD5_HASH_ALGORITHM =
SHA_HASH_ALGORITHM =

SUPPORTED_HASHING_ALGORITHMS = \
	$(SHA_HASH_ALGORITHM) \
	$(MD5_HASH_ALGORITHM)

SNMP_ADMINISTRATIVE_FRAMEWORK_VERSION = -DSR_SNMPv1_ADMIN

SNMP_ADMINISTRATIVE_MIB_SUPPORT = -DSR_SNMP_ADMIN_MIB

SUPPORTED_PACKET_VERSIONS = \
	$(SNMP_V1_PACKET) \
	$(SNMP_V2C_PACKET) \
	$(SNMP_V3_PACKET)

SUPPORTED_PACKET_MIBS = \
	$(SNMP_V1_PACKET_MIB) \
	$(SNMP_V3_PACKET_MIB)

SUPPORTED_APO_LEVEL =

GENERATE_CONFIGURATION = \
	-DSR_GENERATE_CONFIGURATION \
	-DSR_GENERATE_SNMPV3_CONFIGURATION
#	-DSR_GENERATE_OLD_STYLE_CONFIGURATION

SNMP_OPTIONS = \
	$(CUSTOMER_DEFINES)  \
	$(EXPORT) \
	$(SYS_OR_TABLE) \
	$(TRANSPORT_TABLE) \
	$(SUPPORTED_PACKET_VERSIONS) \
	$(SUPPORTED_PACKET_MIBS) \
	$(SUPPORTED_APO_LEVEL) \
	$(SUPPORTED_SECURITY_MODELS) \
	$(SUPPORTED_PRIVACY_PROTOCOLS) \
	$(SUPPORTED_HASHING_ALGORITHMS) \
	$(SNMPV3_COMPLIANCE_OPTIONS) \
	$(SNMP_ADMINISTRATIVE_FRAMEWORK_VERSION) \
	$(SNMP_ADMINISTRATIVE_MIB_SUPPORT) \
	$(EPIC) $(EPICTEST) \
	$(GENERATE_CONFIGURATION)


#
# Transports
#

IP_TRANSPORT = -DSR_IP

IPX_TRANSPORT =

TRANSPORTS = $(IP_TRANSPORT) $(IPX_TRANSPORT)


UTILDIR	   =	./

SNMPINCDIR =	$(TOPDIR)/include
MGRDIR     = $(TOPDIR)/config/mgr

DEBUG = -DSR_DEBUG

CFLAGS = \
	$(DEBUGFLAGS) \
	$(DEBUG) \
	-I. \
	-I../shared \
	-I$(SNMPINCDIR) \
	$(EXTRA_DEFS) \
	$(OS) \
	$(SNMP_OPTIONS) \
	$(SR_CONFIG_FP) \
	$(SYSOPTS) \
	$(SR_OSTYPE) \
	-DSR_AGENT_TOOLS

MGRCFLAGS =    $(CFLAGS)

LIBS = $(LIBDIR)/libmibtree.$(LIBEXT) $(LIBDIR)/libdevkit.$(LIBEXT)

POSTMOSY = $(OSOBJDIR)/postmosy$(BINEXT)

all: $(BINDIR) $(OSOBJDIR) $(SOURCELINKS) $(POSTMOSY)

$(BINDIR):
	-mkdir $(BINDIR)

$(OSOBJDIR):
	-mkdir $(OSOBJDIR)


################################################################
# postmosy
################################################################
POSTMOSY_SRCS=$(OSOBJDIR)/input.c \
		$(OSOBJDIR)/minvutil.c \
		$(OSOBJDIR)/output.c \
		$(OSOBJDIR)/stbutil.c \
		$(OSOBJDIR)/stbfree.c \
		$(OSOBJDIR)/stbdef.c \
		$(OSOBJDIR)/stbundo.c \
		$(OSOBJDIR)/stbset.c \
		$(OSOBJDIR)/stbtest.c \
		$(OSOBJDIR)/stbready.c \
		$(OSOBJDIR)/stbget.c \
		$(OSOBJDIR)/stbrow.c \
		$(OSOBJDIR)/stbctx.c \
		$(OSOBJDIR)/stbinit.c \
		$(OSOBJDIR)/stbhdr.c \
		$(OSOBJDIR)/agtmain.c \
		$(OSOBJDIR)/agtutil.c \
		$(OSOBJDIR)/agttrap.c \
		$(OSOBJDIR)/agtoidl.c \
		$(OSOBJDIR)/agtlcon.c \
		$(OSOBJDIR)/agtcfg.c \
		$(OSOBJDIR)/shared.c \
		$(OSOBJDIR)/agthdr.c

POSTMOSY_OBJS= $(OSOBJDIR)/input.$(OBJEXT) \
		$(OSOBJDIR)/minvutil.$(OBJEXT) \
		$(OSOBJDIR)/output.$(OBJEXT) \
		$(OSOBJDIR)/stbutil.$(OBJEXT) \
		$(OSOBJDIR)/stbfree.$(OBJEXT) \
		$(OSOBJDIR)/stbdef.$(OBJEXT) \
		$(OSOBJDIR)/stbundo.$(OBJEXT) \
		$(OSOBJDIR)/stbset.$(OBJEXT) \
		$(OSOBJDIR)/stbtest.$(OBJEXT) \
		$(OSOBJDIR)/stbready.$(OBJEXT) \
		$(OSOBJDIR)/stbget.$(OBJEXT) \
		$(OSOBJDIR)/stbrow.$(OBJEXT) \
		$(OSOBJDIR)/stbctx.$(OBJEXT) \
		$(OSOBJDIR)/stbinit.$(OBJEXT) \
		$(OSOBJDIR)/stbhdr.$(OBJEXT) \
		$(OSOBJDIR)/agtmain.$(OBJEXT) \
		$(OSOBJDIR)/agtutil.$(OBJEXT) \
		$(OSOBJDIR)/agttrap.$(OBJEXT) \
		$(OSOBJDIR)/agtoidl.$(OBJEXT) \
		$(OSOBJDIR)/agtlcon.$(OBJEXT) \
		$(OSOBJDIR)/agtcfg.$(OBJEXT) \
		$(OSOBJDIR)/shared.$(OBJEXT) \
		$(OSOBJDIR)/agthdr.$(OBJEXT)

$(POSTMOSY):	$(POSTMOSY_OBJS) $(LIBS) 
	$(LD) $(LDFLAGS) -o $(POSTMOSY) $(POSTMOSY_OBJS) $(LIBS) $(SOCKETLIBS) 
	$(CP) $(POSTMOSY) $(BINDIR)/postmosy$(BINEXT)


$(OSOBJDIR)/minvutil.$(OBJEXT): minvutil.c
	$(CORULE)

$(OSOBJDIR)/input.$(OBJEXT):	input.c
	$(CORULE)

$(OSOBJDIR)/output.$(OBJEXT):	output.c
	$(CORULE)

$(OSOBJDIR)/stbutil.$(OBJEXT):	stbutil.c
	$(CORULE)

$(OSOBJDIR)/stbfree.$(OBJEXT):	stbfree.c
	$(CORULE)

$(OSOBJDIR)/stbdef.$(OBJEXT):	stbdef.c
	$(CORULE)

$(OSOBJDIR)/stbundo.$(OBJEXT):	stbundo.c 
	$(CORULE)

$(OSOBJDIR)/stbset.$(OBJEXT):	stbset.c
	$(CORULE)

$(OSOBJDIR)/stbtest.$(OBJEXT):	stbtest.c
	$(CORULE)

$(OSOBJDIR)/stbready.$(OBJEXT):	stbready.c
	$(CORULE)

$(OSOBJDIR)/stbget.$(OBJEXT):	stbget.c
	$(CORULE)

$(OSOBJDIR)/stbrow.$(OBJEXT):	stbrow.c
	$(CORULE)

$(OSOBJDIR)/stbctx.$(OBJEXT):	stbctx.c
	$(CORULE)

$(OSOBJDIR)/stbinit.$(OBJEXT):	stbinit.c
	$(CORULE)

$(OSOBJDIR)/stbhdr.$(OBJEXT):	stbhdr.c
	$(CORULE)

$(OSOBJDIR)/agtmain.$(OBJEXT):	agtmain.c 
	$(CORULE)

$(OSOBJDIR)/agtutil.$(OBJEXT):	agtutil.c
	$(CORULE)

$(OSOBJDIR)/agttrap.$(OBJEXT):	agttrap.c
	$(CORULE)

$(OSOBJDIR)/agtoidl.$(OBJEXT):	agtoidl.c
	$(CORULE)

$(OSOBJDIR)/agtlcon.$(OBJEXT):	agtlcon.c
	$(CORULE)

$(OSOBJDIR)/agtcfg.$(OBJEXT):	agtcfg.c
	$(CORULE)


$(OSOBJDIR)/shared.$(OBJEXT):	shared.c
	$(CORULE)

$(OSOBJDIR)/agthdr.$(OBJEXT):	agthdr.c
	$(CORULE)

LINTOPTS = -I. -I../shared -I$(SNMPINCDIR) -I$(OSOBJDIR) \
	$(OS) $(SYSOPTS) -DSR_AGENT_TOOLS \
	-DNOTICE
lint:
	-$(LINT) $(LINTOPTS) $(POSTMOSY_SRCS) \
	-$(LIBDIR)/$(LLIB)devkit.ln \
	-$(TOPDIR)/$(LLIB)mibtree.ln | \
	-grep -v "possible pointer alignment problem"

################################################################
# clean
################################################################

clean:
	-$(RM) $(OSOBJDIR)/*.$(OBJEXT)
	-$(RM) $(OSOBJDIR)/*$(BINEXT)
	-rmdir $(OSOBJDIR)

