TOPDIR     =    ../..

# 
# Operating System Information
#

RM = rm -f
RMDIR = rmdir
MOVE = mv
CP = cp
CAT = cat
MKDIR = mkdir
# PRESERVE is the flag to $(CP) to duplicate the modification time and
# permission modes of the original file or directory.
PRESERVE = -p


# Extensions to certain kinds of files are set here.
LIBEXT = a
BINEXT =
OBJEXT = o


LIBPRF = lib


              OS = -DLINUX
              os = linux
      SR_OSTYPE =
         OSFLAGS =
      SOCKETLIBS =
            LLIB =
      LINTLIBOPT =
        LINTOPTS =
     THREAD_LIBS = -lpthread
     SR_SEM_LIBS = -lrt
      EXTRA_DEFS = 


              CC = cc
              LD = cc
      DEBUGFLAGS = -g -Wall -fno-builtin -Wpointer-arith -Wstrict-prototypes
            LINT = lint
              AR = ar
             LEX = flex
            YACC = yacc
          AROPTS = cr
          RANLIB = touch

      EXTRA_SRCS =
      EXTRA_OBJS =

# for shared libraries
DYNCFLAGS = -fPIC
DYNLDFLAGS = -shared
DYN_LINK_FLAGS = -rdynamic
DYNLDLIBS =
DYNLD = ld 
DYN_LIB_LIBS = -ldl
SHLIBPRF = lib
SHLIBEXT = so
IPC_DEFAULT = -DSR_UDS_IPC
IPC_DEFAULT_LIB = uds


#
# Directories
#


OSBASEDIR =


SRM_ARCH = $(shell /bin/arch)

OSLIBDIR = $(os)_$(SRM_ARCH)$(OSBASEDIR).lib
OSOBJDIR = $(os)_$(SRM_ARCH)$(OSBASEDIR).obj
OSBINDIR = $(os)_$(SRM_ARCH)$(OSBASEDIR).bin

SECUR_DIR = $(TOPDIR)/../basic

LIBDIR      = $(SECUR_DIR)/$(OSLIBDIR)
BINDIR      = $(SECUR_DIR)/$(OSBINDIR)
INSTALLDIR  = $(SECUR_DIR)/$(OSBINDIR)
MIBS_DIR    = $(TOPDIR)/mibs
RFCS_DIR    = $(TOPDIR)/mibs/rfcs
IDRAFTS_DIR = $(TOPDIR)/mibs/internet-drafts
IANA_DIR    = $(TOPDIR)/mibs/iana
MIBCOMP_DIR = $(SECUR_DIR)/$(OSBINDIR)


MIBCOMP = mibgc


SNMPINCDIR =    $(TOPDIR)/include
CFGDIR     =    $(SECUR_DIR)/config
MGRDIR     =    $(CFGDIR)/mgr
MGRTOOL    =    $(BINDIR)/mgrtool$(BINEXT)


IANA_MIBS = \
	iana-addr-fam.my \
	iana-iftype.my   \
	iana-language.my

IANA_DEFS = \
	$(OSOBJDIR)/iana-addr-fam.def \
	$(OSOBJDIR)/iana-iftype.def   \
	$(OSOBJDIR)/iana-language.def


RFC_MIBS =


RFC_DEFS = 


DEFS = \
	$(OSOBJDIR)/smi.def \
	$(OSOBJDIR)/mib-2.def \
        $(OSOBJDIR)/srAgentInfo.def \
        $(OSOBJDIR)/apoCap.def \
        $(OSOBJDIR)/apo.def \
	$(OSOBJDIR)/brassAuxInfo.def \
	$(OSOBJDIR)/ifType.def \
	$(OSOBJDIR)/ifmib.def \
	$(OSOBJDIR)/inet-addr-mib.def \
	$(OSOBJDIR)/ipmib.def \
	$(OSOBJDIR)/tcpmib.def \
	$(OSOBJDIR)/udpmib.def \
	$(OSOBJDIR)/yourmib.def \
	$(OSOBJDIR)/sr-tc.def \
	$(OSOBJDIR)/v2-tc.def \
	$(OSOBJDIR)/v2-mib.def \
	$(OSOBJDIR)/v2-smi.def \
	$(OSOBJDIR)/v2-tm.def \
	$(OSOBJDIR)/coex.def \
	$(OSOBJDIR)/v3-acm.def \
	$(OSOBJDIR)/v3-mpd.def \
	$(OSOBJDIR)/v3-proxy.def \
	$(OSOBJDIR)/v3-usm.def \
	$(OSOBJDIR)/v3-arch.def \
	$(OSOBJDIR)/v3-notif.def \
	$(OSOBJDIR)/v3-tgt.def \
	$(OSOBJDIR)/apo-tgt.def \
	$(OSOBJDIR)/usm-tran.def \
	$(OSOBJDIR)/tgt-tran.def  \
	$(OSOBJDIR)/snmp-res.def \
	$(OSOBJDIR)/dprintf.def \
	$(IANA_DEFS) \
	$(RFC_DEFS)


all: $(MGRDIR) $(MIBS_TO_COPY) $(OSOBJDIR) $(OSOBJDIR)/snmp-mib.h $(OSOBJDIR)/snmpinfo.dat

$(OSOBJDIR):
	-$(MKDIR) $(OSOBJDIR)

$(MGRDIR): $(CFGDIR)
	-$(MKDIR) $(MGRDIR)

$(CFGDIR):
	-$(MKDIR) $(CFGDIR)


$(DEFS):  $(IANA_MIBS) $(RFC_MIBS)
	$(BINDIR)/$(MIBCOMP)$(BINEXT) -s -S $(@F:def=my)
	$(MOVE) $(@F) $(OSOBJDIR)


$(IANA_MIBS):
	-$(BINDIR)/premosy $(IANA_DIR)/$(@F:my=txt) $(@F)


$(OSOBJDIR)/objects.mib: $(DEFS)
	$(CAT) $(DEFS) > $(OSOBJDIR)/objects.mib

$(OSOBJDIR)/snmp-mib.h $(OSOBJDIR)/snmpinfo.dat: $(OSOBJDIR)/objects.mib
	$(MGRTOOL) $(OSOBJDIR)/objects.mib
	$(MOVE) snmp-mib.h   $(OSOBJDIR)
	$(MOVE) snmpinfo.dat $(OSOBJDIR)
	$(CP) $(OSOBJDIR)/snmp-mib.h   $(SNMPINCDIR)/snmp-mib.h
	$(CP) $(OSOBJDIR)/snmpinfo.dat $(MGRDIR)/snmpinfo.dat

clean:
	-$(RM) $(SNMPINCDIR)/snmp-mib.h
	-$(RM) $(MGRDIR)/snmpinfo.dat
	-$(RM) $(OSOBJDIR)/snmpinfo.dat
	-$(RM) $(OSOBJDIR)/snmp-mib.h
	-$(RM) $(OSOBJDIR)/objects.mib
	-$(RM) $(OSOBJDIR)/snmpinfo.c
	-$(RM) $(OSOBJDIR)/*.def
	-$(RMDIR) $(OSOBJDIR)
	-$(RM) iana-addr-fam.my
	-$(RM) iana-iftype.my
	-$(RM) iana-language.my
	-$(RM) iana-iproute.my

