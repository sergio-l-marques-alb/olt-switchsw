#
# Helper makefile for integrating the AAPL library into the SDK builds.
#

# Map aapl library name to SDK library name
ifeq (,$(lib))
lib = $(LIBNAME)
endif

# Duplicate aapl rule for C source compilation
$(BLDDIR)/%.$(OBJSUFFIX): %.c $(BLDDIR)/.tree
	@$(ECHO) 'Compiling $(LOCALDIR)/$<'
	$(Q)$(CC) $(CPPFLAGS) $(CFLAGS) -c $< -o $@

# Include SDK library rules to support Linux shared library builds
include $(SDK)/make/Make.lib
