<?xml version="1.0"?>
<device_data lib="dnx_data" device="q2a_a0"  module="trap">
    <includes>
        <include>bcm_int/dnx/rx/rx_trap.h</include>
    </includes>
    
    <sub_module name="ingress">

        <numerics>
            <numeric name="protocol_traps_init_mode" value="DNX_RX_TRAP_PROTOCOL_MODE_IN_LIF">
                <property name="protocol_traps_mode" method="direct_map">
                    <map name="IN_LIF" value="DNX_RX_TRAP_PROTOCOL_MODE_IN_LIF"></map>
                    <map name="IN_PORT" value="DNX_RX_TRAP_PROTOCOL_MODE_IN_PORT"></map>
                    <doc>
                        Set the initialization property of the protocol trap indexing,
                        they can be done per:
                            IN_LIF - Trap profiling address is the IN-LIF
                            IN_PORT - Trap profiling address is the IN-PORT
                    </doc>
                </property>
            </numeric>
        </numerics>

        <features>
            <feature name="ndp_trap_en" value="1"></feature>
            <feature name="trap_in_lif_profile_mapping" value="1"></feature>
            <feature name="snoop_code_clear_action" value="1"></feature>
            <feature name="mirror_code_clear_action" value="1"></feature>
            <feature name="stat_sampling_code_clear_action" value="1"></feature>
        </features>
        <defines> 
            <define name="protocol_traps_lif_profile_starting_offset" value="1024"></define>
        </defines> 
    </sub_module>

    <sub_module name="erpp">

        <features>
            <feature name="unknown_da_trap_en" value="1"></feature>
            <feature name="glem_not_found_trap" value="0"></feature>
        </features>

    </sub_module>

</device_data>
