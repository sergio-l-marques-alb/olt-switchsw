<?xml version="1.0"?>
<device_data lib="dnx_data" device="j2p_a0"  module="trap">
    <includes>
        <include>bcm_int/dnx/rx/rx_trap.h</include>
    </includes>
    
    <sub_module name="ingress">
        <features>
            <feature name="ndp_trap_en" value="1"></feature>
            <feature name="trap_in_lif_profile_mapping" value="1"></feature>
            <feature name="svtag_trap_en" value="1"></feature>
            <feature name="oam_offset_actions" value="1"></feature>
            <feature name="snoop_code_clear_action" value="1"></feature>
            <feature name="mirror_code_clear_action" value="1"></feature>
            <feature name="stat_sampling_code_clear_action" value="1"></feature>
        </features>
        <defines> 
            <define name="protocol_traps_lif_profile_starting_offset" value="256"></define>
            <define name="nof_error_code_profiles" value="4"></define>  
            <define name="nof_sci_profiles" value="4"></define>
            <define name="nof_error_codes" value="256"></define>  
            <define name="nof_scis" value="1024"></define>
        </defines> 
    </sub_module>

    <sub_module name="erpp">

        <features>
            <feature name="unknown_da_trap_en" value="1"></feature>
            <feature name="glem_not_found_trap" value="0"></feature>
            <feature name="ip_4_6_l4_traps_enabled" value="1"></feature>
        </features>

    </sub_module>

</device_data>
