        </defines>

        <numerics>
        </numerics>

        <tables>
        </tables>

    </sub_module>

    <sub_module name="etpp">

        <features>
        </features>

        <defines>
            <define name="nof_etpp_app_traps" value="11"></define>
            <define name="nof_etpp_user_configurable_profiles" value="4"></define>
            <define name="nof_etpp_trap_profiles" value="7"></define>
            <define name="nof_etpp_oam_traps" value="6"></define>
