    <sub_module name="strength">

        <features>
        </features>

        <defines>
            <define name="max_strength" value="15"></define>
            <define name="max_snp_strength" value="7"></define>
            <define name="max_ingress_to_egress_compressed_strength" value="7"></define>
        </defines>

        <numerics>
            <numeric name="default_trap_strength" value="4">
                <property name="default_trap_strength" method="range" range_min="0" range_max="15">
                    <doc>
                        Default trap strength used when drop / trap packets to CPU.
                    </doc>
                </property>
            </numeric>
            <numeric name="default_snoop_strength" value="1">
                <property name="default_snoop_strength" method="range" range_min="0" range_max="7">
                    <doc>
                        Default snoop strength used when drop / trap packets to CPU.
                    </doc>
                </property>
            </numeric>
        </numerics>

        <tables>
