--><AppDbCatalog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../hard_logic_schema.xsd">

      <AppDB Name="INGRESS_LLVP_CLASSIFICATION">
        <OneLineDescription>Ingress LLVP classification table, used for VLAN editing</OneLineDescription>
        <AccessMethod>HARD_LOGIC</AccessMethod>
        <Maturity Level="HIGH"/>
        <AppDbInterface Type="DIRECT">
            <Key>
                <Field Name="INNER_TPID" Size="3" Type="TPID_INDEX"/>
                <Field Name="OUTER_TPID" Size="3" Type="TPID_INDEX"/>
                <Field Name="IS_OUTER_PRIO" Size="1" Type="BOOL" Valid="1-DNX_DATA.vlan.llvp.ext_vcp_en"/>
                <Field Name="INGRESS_LLVP_PROFILE"/>
            </Key>
            <Result>
                <Field Name="INCOMING_VID_EXIST" Size="1" Type="BOOL"/>
                <Field Name="INCOMING_TAG_EXIST" Size="1" Type="BOOL"/>
                <Field Name="INCOMING_S_TAG_EXIST" Size="1" Type="BOOL"/>
                <Field Name="ACCEPTABLE_FRAME_TYPE_ACTION" Size="2"/>
                <Field Name="INCOMING_TAG_STRUCTURE"/>
                <Field Name="IVEC_INDEX" Type="VLAN_EDIT_CMD_INDEX"/>
                <Field Name="LLVP_PCP_DEI_PROFILE" Size="4" Type="UINT"/>
                <Field Name="LLVP_PCP_DEI_MAP_TYPE" Type="PCP_DEI_MAP_TYPE"/>
            </Result>
            <TableLabels>PP_PORT</TableLabels>
        </AppDbInterface>
        <AppToPhyDbMapping>
            <CoreMode Mode="SBC"/> 
            <FieldMapping>
                <Field Name="INCOMING_VID_EXIST"> 
                    <Access>
                        <Memory GroupName="INGRESS_LLVP_CLASSIFICATION_GROUP">
                            <HwField Name="INCOMING_VID_EXISTf"/>
                        </Memory>
                    </Access>
                </Field>
                <Field Name="INCOMING_TAG_EXIST"> 
                    <Access>
                        <Memory GroupName="INGRESS_LLVP_CLASSIFICATION_GROUP">
                            <HwField Name="INCOMING_TAG_EXISTf"/>
                        </Memory>
                    </Access>
                </Field>
                <Field Name="INCOMING_S_TAG_EXIST"> 
                    <Access>
                        <Memory GroupName="INGRESS_LLVP_CLASSIFICATION_GROUP">
                            <HwField Name="INCOMING_S_TAG_EXISTf"/>
                        </Memory>
                    </Access>
                </Field>
                <Field Name="ACCEPTABLE_FRAME_TYPE_ACTION"> 
                    <Access>
                        <Memory GroupName="INGRESS_LLVP_CLASSIFICATION_GROUP">
                            <HwField Name="ACCEPTABLE_FRAME_TYPE_ACTIONf"/>
                        </Memory>
                    </Access>
                </Field>
                <Field Name="INCOMING_TAG_STRUCTURE"> 
                    <Access>
                        <Memory GroupName="INGRESS_LLVP_CLASSIFICATION_GROUP">
                            <HwField Name="INCOMING_TAG_STRUCTUREf"/>
                        </Memory>
                    </Access>
                </Field>
                <Field Name="IVEC_INDEX"> 
                    <Access>
                        <Memory GroupName="INGRESS_LLVP_CLASSIFICATION_GROUP">
                            <HwField Name="IVECf"/>
                        </Memory>
                    </Access>
                </Field>
                <Field Name="LLVP_PCP_DEI_PROFILE"> 
                    <Access>
                        <Memory GroupName="INGRESS_LLVP_CLASSIFICATION_GROUP">
                            <HwField Name="PCP_DEI_PROFILEf"/>
                        </Memory>
                    </Access>
                </Field>
                <Field Name="LLVP_PCP_DEI_MAP_TYPE"> 
                    <Access>
                        <Memory GroupName="INGRESS_LLVP_CLASSIFICATION_GROUP">
                            <HwField Name="PCP_DEI_MAP_TYPEf"/>
                        </Memory>
                    </Access>
                </Field>
            </FieldMapping>
        </AppToPhyDbMapping>
    </AppDB>

