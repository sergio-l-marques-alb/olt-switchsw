            <CoreMode Mode="SBC"/>
            <FieldMapping>
                <Field Name="ENABLE">
                    <Access>
                        <Memory Name="CGM_SYS_RED_RJCT_PRMSm">
                            <HwField Name="SYS_RED_ENf"/>
                        </Memory>
                    </Access>
                </Field>
                <Field Name="ADMIT_THR">
                    <Access>
                        <Memory Name="CGM_SYS_RED_RJCT_PRMSm">
