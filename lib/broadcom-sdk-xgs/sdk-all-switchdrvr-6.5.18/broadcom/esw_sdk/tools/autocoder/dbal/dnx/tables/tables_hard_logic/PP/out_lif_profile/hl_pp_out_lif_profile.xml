    <AppDB Name="ETPP_OUT_LIF_PROFILE_TABLE">
        <OneLineDescription>includes out_lif profile properties</OneLineDescription>
        <AccessMethod>HARD_LOGIC</AccessMethod>
        <Maturity Level="HIGH"/>
        <AppDbInterface Type="DIRECT">
            <Key>
                <Field Name="OUT_LIF_PROFILE" Size="6"/>
            </Key>
            <Result>
                <Field Name="OUT_LIF_ORIENTATION" Size="3"/>
                <Field Description="Split Horizon Filter Enable per Outlif Profile" Name="SPLIT_HORIZON_ENABLE" Size="1" Type="BOOL"/>
                <Field Name="OAM_PRIORITY_MAP_PROFILE" Size="2"/>
            </Result>
            <TableLabels>L2 L3</TableLabels>
        </AppDbInterface>
        <AppToPhyDbMapping>
            <CoreMode Mode="SBC"/>
            <FieldMapping>
                <Field Name="OUT_LIF_ORIENTATION">
                    <Access>
                        <Register Name="ETPPC_OUTLIF_ORIENTATION_MAPPINGr">
                            <DataOffset Formula="#KEY_VALUE(OUT_LIF_PROFILE)%64*#RESULT_SIZE(OUT_LIF_ORIENTATION)"/>
                        </Register>
                    </Access>
                </Field>
                <Field Name="SPLIT_HORIZON_ENABLE">
                    <Access>
                        <Register Name="ETPPC_CFG_SPLIT_HORIZON_PER_OUTLIF_PROFILEr">
                            <DataOffset Formula="#FULL_KEY_VALUE()"/>
                        </Register>
                    </Access>
                </Field>
                <Field Name="OAM_PRIORITY_MAP_PROFILE"> 
                    <Access>
                        <Register Name="ETPPC_CFG_PRIORITY_MAP_OAM_LIF_PROFILEr"> 
                            <DataOffset Formula="#FULL_KEY_VALUE()*#RESULT_SIZE(OAM_PRIORITY_MAP_PROFILE)"/>
                        </Register>
                    </Access>
                </Field>
            </FieldMapping>
        </AppToPhyDbMapping>
    </AppDB>

