                <Field Name="MEP_PE_PROFILE_SW"/>
            </Key>
            <Result>
                <Field Name="MEP_PE_PROFILE"/>
                <Field Name="VALID" Type="BOOL"/>
            </Result>
            <TableLabels>OAM</TableLabels>
        </AppDbInterface>
        <AppToPhyDbMapping> 
            <CoreMode Mode="SBC"/>
        </AppToPhyDbMapping>
    </AppDB>

    <AppDB Name="OAMP_PE_PROGRAM_SW_HW2ENUM">
