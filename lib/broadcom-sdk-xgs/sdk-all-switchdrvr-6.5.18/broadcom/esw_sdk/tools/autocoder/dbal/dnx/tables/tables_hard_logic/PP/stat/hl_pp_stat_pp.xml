                        </Register>
                    </Access>
                </Field>
                <Field Name="ECMP_STATISTIC_PROFILE_MAP">
                    <Access>
                        <Register Name="IPPD_STATISTIC_PROFILE_MAPr">
                            <HwField Name="ECMP_STATISTIC_PROFILE_MAPf"/>
                            <DataOffset Formula="#FULL_KEY_VALUE()*#RESULT_SIZE(ECMP_STATISTIC_PROFILE_MAP)"/>
                        </Register>
                    </Access>
                </Field>                
            </FieldMapping>
        </AppToPhyDbMapping>
    </AppDB>    

</AppDbCatalog>
