            </Key>
            <Result>
                <Field Name="FEC_STATISTIC_PROFILE_MAP" Size="2"/>
                <Field Name="ECMP_STATISTIC_PROFILE_MAP" Size="2"/>
            </Result>
            <TableLabels>PP_STATISTICS</TableLabels>
        </AppDbInterface>
        <AppToPhyDbMapping>
            <CoreMode Mode="SBC"/>
            <FieldMapping>
                <Field Name="FEC_STATISTIC_PROFILE_MAP">
                    <Access>
                        <Register Name="IPPD_STATISTIC_PROFILE_MAPr">
                            <HwField Name="SUPER_STATISTIC_PROFILE_MAPf"/>
