<?xml version="1.0" encoding="UTF-8"?>

<!--
    ******************************************************
    DBAL Hard-Logic Logical Tables:
    This xml contains the hard-logic logical DB for the DBAL.
    The data is loaded to the device during init process
    ******************************************************

    DB Rules:
    *********
-->

<AppDbCatalog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../hard_logic_schema.xsd">

    <AppDB Name="STACK_FEC_RESOLVE_TABLE">
        <OneLineDescription>This table reprsents stacking fec resolve</OneLineDescription>
        <AccessMethod>HARD_LOGIC</AccessMethod>
        <Maturity Level="HIGH"/>
        <AppDbInterface Type="DIRECT">
            <Key>
                <Field Name="FLOW_ID" Size="6"/>
                <Field Name="LAG_LB_KEY" Size="4"/>
            </Key>
            <Result>
                <Field Name="STACK_LAG" Size="6" Type="UINT"/>
            </Result>
            <TableLabels>STACK</TableLabels>
        </AppDbInterface>
        <AppToPhyDbMapping>
            <CoreMode Mode="SBC"/>
            <FieldMapping>
                <Field Name="STACK_LAG">
                    <Access>
                        <Memory Name="CGM_STACK_FEC_RESOLVEm">
                            <HwField Name="STACK_LAGf"/>
                        </Memory>
                    </Access>
                </Field>
            </FieldMapping>
        </AppToPhyDbMapping>
    </AppDB>

    <AppDB Name="STACK_TRUNK_RESOLVE_TABLE">
        <OneLineDescription>This table reprsents stacking trunk resolve</OneLineDescription>
        <AccessMethod>HARD_LOGIC</AccessMethod>
        <Maturity Level="HIGH"/>
        <AppDbInterface Type="DIRECT">
            <Key>
                <Field Name="STACK_LAG" Size="6" Type="UINT"/>
                <Field Name="LAG_LB_KEY" Size="6"/>
            </Key>
            <Result>
                <Field Name="BASE_QUEUE" Size="16" Type="UINT"/>
            </Result>
            <TableLabels>STACK</TableLabels>
        </AppDbInterface>
        <AppToPhyDbMapping>
            <CoreMode Mode="SBC"/>
            <FieldMapping>
                <Field Name="BASE_QUEUE">
                    <Access>
                        <Memory Name="CGM_STACK_TRUNK_RESOLVEm">
                            <HwField Name="BASE_QUEUEf"/>
                        </Memory>
                    </Access>
                </Field>
            </FieldMapping>
        </AppToPhyDbMapping>
    </AppDB>

</AppDbCatalog>

