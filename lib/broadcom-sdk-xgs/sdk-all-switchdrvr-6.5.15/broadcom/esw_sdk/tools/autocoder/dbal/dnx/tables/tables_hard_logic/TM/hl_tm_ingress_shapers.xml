<AppDbCatalog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../hard_logic_schema.xsd">

    <AppDB Name="INGRESS_SHAPER_CPU_GUARANTEED">
        <OneLineDescription>This table contains parameters of Cpu Guaranteed shaper.</OneLineDescription>
        <AccessMethod>HARD_LOGIC</AccessMethod>
        <Maturity Level="HIGH"/>
        <AppDbInterface Type="DIRECT">
            <Key>
                <Field Name="CORE_ID"/>
            </Key>
            <Result>
                <Field Name="TIMER_CYCLES" Size="8" Type="UINT"/>
                <Field Name="GRANT_SIZE" Size="10" Type="UINT" Description="Size in bytes"/>
                <Field Name="MAX_BURST" Size="16" Type="UINT" Description="In bytes"/>
            </Result>
            <TableLabels>ITM</TableLabels>
        </AppDbInterface>
        <AppToPhyDbMapping>
            <CoreMode Mode="DPC"/>
            <FieldMapping>
                <Field Name="TIMER_CYCLES">
                    <Access>
                        <Register Name="IRE_CPU_SHAPERr">
                            <HwField Name="CPU_SHAPER_TIMER_CYCLESf"/>
                        </Register>
                    </Access>
                </Field>
                <Field Name="GRANT_SIZE">
                    <Access>
                        <Register Name="IRE_CPU_SHAPERr">
                            <HwField Name="CPU_SHAPER_GRANT_SIZEf"/>
                        </Register>
                    </Access>
                </Field>
                <Field Name="MAX_BURST">
                    <Access>
                        <Register Name="IRE_CPU_SHAPERr">
                            <HwField Name="CPU_SHAPER_MAX_BURSTf"/>
                        </Register>
                    </Access>
                </Field>
            </FieldMapping>
        </AppToPhyDbMapping>
    </AppDB>

