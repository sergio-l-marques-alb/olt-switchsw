                        </Register>
                    </Access>
                </Field>
                <Field Name="DEFAULT_ROUTE_LOOSE_RPF">
                    <Access>
                        <Register Name="IPPD_ALLOW_DEFAULT_ROUTEr">
                            <HwField Name="UC_LOOSE_RPF_ALLOW_DEFAULTf"/>
                        </Register>
                    </Access>
                </Field>
                <Field Name="DEFAULT_ROUTE_MC_SIP_BASED_RPF">
                    <Access>
                        <Register Name="IPPD_ALLOW_DEFAULT_ROUTEr">
                            <HwField Name="MC_SIP_BASED_RPF_ALLOW_DEFAULTf"/>
                        </Register>
                    </Access>
                </Field>
                <Field Name="ENABLE_40K_ECMP_RANGE">
                    <Access>
                        <Register Name="IPPD_FER_POINTER_CONSRUCTIONr">
                            <HwField Name="ENABLE_40K_ECMPf"/>
                        </Register>
                    </Access>
                </Field>
                <Field Name="ENABLE_KAPS_DEFAULT">
                    <Access>
                        <Register Name="IPPB_ENABLE_KAPS_INTERFACE_DEFAULTr">
                            <HwField Name="ENABLE_KAPS_INTERFACE_DEFAULTf"/>
                        </Register>
                    </Access>
                </Field>                
            </FieldMapping>
        </AppToPhyDbMapping>
    </AppDB>

    <AppDB Name="FEC_ECMP_MEMBERS">
        <OneLineDescription>The table contains information regarding the list of members of the ECMP groups</OneLineDescription>
        <AccessMethod>HARD_LOGIC</AccessMethod>
        <Maturity Level="HIGH"/>
        <AppDbInterface Type="DIRECT">
            <Key>
                <Field Name="ECMP_MEMBER_ROW_ID" Type="UINT" Size="12" Description="direct row index to the table"/> 
            </Key>
            <MultipleResults>
                <Result>
                    <Field Name="RESULT_TYPE" Size="1" Value="4B_MEMBER_SIZE" Description="A single member takes 4b"/>
                    <Field Name="ECMP_MEMBER_VAL" Type="UINT" Size="4" NofInstances="8" Description="Indexes of the first FEC/ECMP in the ECMP group."/>
                </Result>
                <Result>
                    <Field Name="RESULT_TYPE" Size="1" Value="8B_MEMBER_SIZE" Description="A single member takes 8b"/>
                    <Field Name="ECMP_MEMBER_VAL" Type="UINT" Size="8" NofInstances="4" Description="Indexes of the first FEC/ECMP in the ECMP group."/>
                </Result>
            </MultipleResults>
            <TableLabels>L3</TableLabels>
        </AppDbInterface>
        <AppToPhyDbMapping> 
            <CoreMode Mode="SBC"/>
            <MultipleResultsMapping>
                <Result LogicalValue="4B_MEMBER_SIZE" Value="0"/>
                <Result LogicalValue="8B_MEMBER_SIZE" Value="1"/>
            </MultipleResultsMapping>
            <FieldMapping ResultType="4B_MEMBER_SIZE">
                <Field Name="RESULT_TYPE">
                    <Access Size="1" Offset="0">
                        <SwState SwType="SW"/>
                    </Access>
                </Field>
                <Field Name="ECMP_MEMBER_VAL">
                    <Access instanceIndex="ALL">
                        <Memory Name="IPPD_FEC_ECMP_MEMBERSm">
                            <ArrayOffset Formula="ECMP_MEMBER_ROW_ID/256"/> <!-- bank ID -->
                            <EntryOffset Formula="ECMP_MEMBER_ROW_ID%256"/> <!-- row in the memory bank -->
                            <HwField Name="FEC_ECMP_MEMBERf"/>
                            <DataOffset Formula="INSTANCE*ECMP_MEMBER_VAL"/>
                        </Memory>
                    </Access>
                </Field>
            </FieldMapping>
            <FieldMapping ResultType="8B_MEMBER_SIZE">
                <Field Name="RESULT_TYPE">
                    <Access Size="1" Offset="0">
                        <SwState SwType="SW"/>
                    </Access>
                </Field>
                <Field Name="ECMP_MEMBER_VAL">
                    <Access instanceIndex="ALL">
                        <Memory Name="IPPD_FEC_ECMP_MEMBERSm">
                            <ArrayOffset Formula="ECMP_MEMBER_ROW_ID/256"/> <!-- bank ID -->
                            <EntryOffset Formula="ECMP_MEMBER_ROW_ID%256"/> <!-- row in the memory bank -->
                            <HwField Name="FEC_ECMP_MEMBERf"/>
                            <DataOffset Formula="INSTANCE*ECMP_MEMBER_VAL"/>
                        </Memory>
                    </Access>
                </Field>
            </FieldMapping>
        </AppToPhyDbMapping>
    </AppDB>

    <AppDB Name="ECMP_BANK_TO_STAGE_MAP">
        <OneLineDescription>The table provides ability to save the hierarchy values for each ECMP ID range. Each instance indicates the hierarchy for every DNXDATA.ecmp_stage_map_size number of entries.</OneLineDescription>
        <AccessMethod>HARD_LOGIC</AccessMethod>
        <Maturity Level="HIGH"/>
        <AppDbInterface Type="DIRECT">
            <Key>
            </Key>
            <Result>
                <Field Name="HIERARCHY_LEVEL" Size="2" NofInstances="20" Description="The hierarchy value for a given stage(instance)"/>
            </Result>
            <TableLabels>L3</TableLabels>
        </AppDbInterface>
        <AppToPhyDbMapping>
            <CoreMode Mode="SBC"/>
            <FieldMapping>
                <Field Name="HIERARCHY_LEVEL">
                    <Access instanceIndex="ALL">
                        <Register Name="IPPD_FER_POINTER_CONSRUCTIONr">
                            <HwField Name="ECMP_BANK_TO_STAGE_MAPf"/>
                            <DataOffset Formula="INSTANCE*HIERARCHY_LEVEL"/>
                        </Register>
                    </Access>
                </Field>
            </FieldMapping>
        </AppToPhyDbMapping>
    </AppDB>
    
    <AppDB Name="KAPS_STRENGTH_MAPPING">
        <OneLineDescription>The table holds a mapping of KAPS prefix length to entry strength. Different strengths can be assigned to default and non-default entries.</OneLineDescription>
        <AccessMethod>HARD_LOGIC</AccessMethod>
        <Maturity Level="HIGH"/>
        <AppDbInterface Type="DIRECT">
            <Key>
            <Field Name="KAPS_INTERFACE" /> 
        <Field Name="PREFIX_LENGTH" Type="KAPS_PREFIX_LENGTH"/> 
            </Key>
            <Result>
                <Field Name="STRENGTH_NON_DEFAULT" Type="KAPS_ENTRY_STRENGTH" Description="The strength for non-default entry "/>
        <Field Name="STRENGTH_DEFAULT" Type="KAPS_ENTRY_STRENGTH" Description="The strength for default entry "/>
            </Result>
            <TableLabels>L3</TableLabels>
        </AppDbInterface>
        <AppToPhyDbMapping>
            <CoreMode Mode="SBC"/>
            <FieldMapping>
                <Field Name="STRENGTH_NON_DEFAULT">
                    <Access>
                        <Memory Name="IPPB_FLP_KAPS_STRENGTH_MAPPING_MEMm">
                <ArrayOffset Formula="KAPS_INTERFACE"/>
                <EntryOffset Formula="PREFIX_LENGTH"/>
                            <HwField Name="STRENGTH_DEFAULT_0f"/>
                        </Memory>
                    </Access>
                </Field>
                <Field Name="STRENGTH_DEFAULT">
                    <Access>
                        <Memory Name="IPPB_FLP_KAPS_STRENGTH_MAPPING_MEMm">
                <ArrayOffset Formula="KAPS_INTERFACE"/>
                <EntryOffset Formula="PREFIX_LENGTH"/>
                            <HwField Name="STRENGTH_DEFAULT_1f"/>
                        </Memory>
                    </Access>
                </Field>                
            </FieldMapping>
        </AppToPhyDbMapping>
    </AppDB>    

    <AppDB Name="FEC_BANK_TO_STAGE_MAP">
        <OneLineDescription>The table provides ability to save the hierarchy values for each FEC range. Each instance indicates the hierarchy for every DNXDATA.fec_stage_map_size number of entries.</OneLineDescription>
        <AccessMethod>HARD_LOGIC</AccessMethod>
        <Maturity Level="HIGH"/>
        <AppDbInterface Type="DIRECT">
            <Key>
            </Key>
            <Result>
                <Field Name="HIERARCHY_LEVEL" Size="2" NofInstances="30" Description="The hierarchy value for a given stage(instance)"/>
            </Result>
            <TableLabels>L3</TableLabels>
        </AppDbInterface>
        <AppToPhyDbMapping>
            <CoreMode Mode="SBC"/>
            <FieldMapping>
                <Field Name="HIERARCHY_LEVEL">
                    <Access instanceIndex="ALL">
                        <Register Name="IPPD_FER_POINTER_CONSRUCTIONr">
                            <HwField Name="FEC_BANK_TO_STAGE_MAPf"/>
                            <DataOffset Formula="INSTANCE*HIERARCHY_LEVEL"/>
                        </Register>
                    </Access>
                </Field>
            </FieldMapping>
        </AppToPhyDbMapping>
    </AppDB>

</AppDbCatalog>

