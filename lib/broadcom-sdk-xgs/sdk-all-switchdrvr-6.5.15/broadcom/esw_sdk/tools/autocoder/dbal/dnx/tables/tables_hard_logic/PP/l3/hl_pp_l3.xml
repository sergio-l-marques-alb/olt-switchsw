<AppDbCatalog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:noNamespaceSchemaLocation="../../hard_logic_schema.xsd">

    <AppDB Name="ECMP_TABLE">
        <OneLineDescription>Holds all the ECMP groups</OneLineDescription>
        <AccessMethod>HARD_LOGIC</AccessMethod>
        <Maturity Level="HIGH"/>
        <AppDbInterface Type="DIRECT">
            <Key>
                <Field Name="ECMP_ID" MaxValue="DNX_DATA.l3.ecmp.max_ecmp_extended_mode" MinValue="1"/>
            </Key>
            <Result>
                <Field Name="FEC_POINTER_BASE" Description="Index of the first FEC/ECMP in the ECMP group."/>
                <Field Name="ECMP_GROUP_PROFILE" Description="The ECMP profile index."/>
                <Field Name="RPF_MODE_IS_EM" Type="BOOL" Description="In case the ECMP is using an EM RPF mode this bit should be set to prevent SIP base MC RPF in case enabled as it would fail."/>
            </Result>
            <TableLabels>L3</TableLabels>
        </AppDbInterface>
        <AppToPhyDbMapping> 
            <CoreMode Mode="SBC"/>
            <FieldMapping>
                <Field Name="FEC_POINTER_BASE">
                    <!-- In the case of ECMP_ID > 32k, we need to save the group in another HL table.
                     To find the exact bank that the ID belongs to in the HL table, we need to subtract 32k from the ECMP ID value and then divide by the number of rows in a single bank
                     We also need to make a copy of the entry in the two halves of the memory. -->
                    <Access>
                        <KeyCondition Type="BIGGER_THAN" Value="DNX_DATA.l3.ecmp.max_ecmp_basic_mode"/>
                        <Memory Name="IPPD_FEC_PATH_SELECTm">
                            <!-- Add the entry in the former 16 banks of the memory -->
                            <ArrayOffset Formula="ECMP_ID/DNX_DATA.l3.ecmp.nof_ecmp_per_bank_of_extended_ecmps-32768/DNX_DATA.l3.ecmp.nof_ecmp_per_bank_of_extended_ecmps"/>
                            <!-- Find the row in the HL table that the ECMP ID needs to be saved in -->
                            <EntryOffset Formula="ECMP_ID%DNX_DATA.l3.ecmp.nof_ecmp_per_bank_of_extended_ecmps"/>
                        </Memory>
                    </Access>
                    <Access>
                        <KeyCondition Type="BIGGER_THAN" Value="DNX_DATA.l3.ecmp.max_ecmp_basic_mode"/>
                        <Memory Name="IPPD_FEC_PATH_SELECTm">
                            <!-- Add the entry in the latter 16 banks of the memory -->
                            <ArrayOffset Formula="16+ECMP_ID/DNX_DATA.l3.ecmp.nof_ecmp_per_bank_of_extended_ecmps-32768/DNX_DATA.l3.ecmp.nof_ecmp_per_bank_of_extended_ecmps"/>
                            <!-- Find the row in the HL table that the ECMP ID needs to be saved in -->
                            <EntryOffset Formula="ECMP_ID%DNX_DATA.l3.ecmp.nof_ecmp_per_bank_of_extended_ecmps"/>
                        </Memory>
                    </Access>
                    <Access>
                        <KeyCondition Type="LOWER_THAN" Value="DNX_DATA.l3.ecmp.nof_ecmp_basic_mode"/>
                        <Memory Name="IPPD_FEC_ECMPm">
                            <ArrayOffset Formula="ECMP_ID/DNX_DATA.l3.ecmp.nof_ecmp_per_bank_of_low_ecmps"/>
                            <EntryOffset Formula="ECMP_ID%DNX_DATA.l3.ecmp.nof_ecmp_per_bank_of_low_ecmps"/>
                            <HwField Name="FEC_POINTER_BASEf"/>
                        </Memory>
                    </Access>
                </Field>
                <Field Name="ECMP_GROUP_PROFILE">
                    <Access>
                        <KeyCondition Type="BIGGER_THAN" Value="DNX_DATA.l3.ecmp.max_ecmp_basic_mode"/>
                        <Memory Name="IPPD_FEC_PATH_SELECTm">
                            <!-- (ECMP_ID - 32k) / nof_ecmp_per_bank_of_extended_ecmps -->
                            <ArrayOffset Formula="ECMP_ID/DNX_DATA.l3.ecmp.nof_ecmp_per_bank_of_extended_ecmps-32768/DNX_DATA.l3.ecmp.nof_ecmp_per_bank_of_extended_ecmps"/>
                            <EntryOffset Formula="ECMP_ID%DNX_DATA.l3.ecmp.nof_ecmp_per_bank_of_extended_ecmps"/>
                            <DataOffset Formula="FEC_POINTER_BASE"/>
                        </Memory>
                    </Access>
                    <Access>
                        <KeyCondition Type="BIGGER_THAN" Value="DNX_DATA.l3.ecmp.max_ecmp_basic_mode"/>
                        <Memory Name="IPPD_FEC_PATH_SELECTm">
                            <!-- (ECMP_ID - 32k) / nof_ecmp_per_bank_of_extended_ecmps -->
                            <ArrayOffset Formula="16+ECMP_ID/DNX_DATA.l3.ecmp.nof_ecmp_per_bank_of_extended_ecmps-32768/DNX_DATA.l3.ecmp.nof_ecmp_per_bank_of_extended_ecmps"/>
                            <EntryOffset Formula="ECMP_ID%DNX_DATA.l3.ecmp.nof_ecmp_per_bank_of_extended_ecmps"/>
                            <DataOffset Formula="FEC_POINTER_BASE"/>
                        </Memory>
                    </Access>
                    <Access>
                        <KeyCondition Type="LOWER_THAN" Value="DNX_DATA.l3.ecmp.nof_ecmp_basic_mode"/>
                        <Memory Name="IPPD_FEC_ECMPm"> 
                            <ArrayOffset Formula="ECMP_ID/DNX_DATA.l3.ecmp.nof_ecmp_per_bank_of_low_ecmps"/>
                            <EntryOffset Formula="ECMP_ID%DNX_DATA.l3.ecmp.nof_ecmp_per_bank_of_low_ecmps"/>
                            <HwField Name="GROUP_PROFILE_PTRf"/>
                        </Memory>
                    </Access>
                </Field>
                <Field Name="RPF_MODE_IS_EM">
                    <Access>
                        <KeyCondition Type="BIGGER_THAN" Value="DNX_DATA.l3.ecmp.max_ecmp_basic_mode"/>
                        <Memory Name="IPPD_FEC_PATH_SELECTm">
                            <!-- (ECMP_ID - 32k) / nof_ecmp_per_bank_of_extended_ecmps -->
                            <ArrayOffset Formula="ECMP_ID/DNX_DATA.l3.ecmp.nof_ecmp_per_bank_of_extended_ecmps-32768/DNX_DATA.l3.ecmp.nof_ecmp_per_bank_of_extended_ecmps"/>
                            <EntryOffset Formula="ECMP_ID%DNX_DATA.l3.ecmp.nof_ecmp_per_bank_of_extended_ecmps"/>
                            <DataOffset Formula="FEC_POINTER_BASE+ECMP_GROUP_PROFILE"/>
                        </Memory>
                    </Access>
                    <Access>
                        <KeyCondition Type="BIGGER_THAN" Value="DNX_DATA.l3.ecmp.max_ecmp_basic_mode"/>
                        <Memory Name="IPPD_FEC_PATH_SELECTm">
                            <!-- (ECMP_ID - 32k) / nof_ecmp_per_bank_of_extended_ecmps -->
                            <ArrayOffset Formula="16+ECMP_ID/DNX_DATA.l3.ecmp.nof_ecmp_per_bank_of_extended_ecmps-32768/DNX_DATA.l3.ecmp.nof_ecmp_per_bank_of_extended_ecmps"/>
                            <EntryOffset Formula="ECMP_ID%DNX_DATA.l3.ecmp.nof_ecmp_per_bank_of_extended_ecmps"/>
                            <DataOffset Formula="FEC_POINTER_BASE+ECMP_GROUP_PROFILE"/>
                        </Memory>
                    </Access>
                    <Access>
                        <KeyCondition Type="LOWER_THAN" Value="DNX_DATA.l3.ecmp.nof_ecmp_basic_mode"/>
                        <Memory Name="IPPD_FEC_ECMPm"> 
                            <ArrayOffset Formula="ECMP_ID/DNX_DATA.l3.ecmp.nof_ecmp_per_bank_of_low_ecmps"/>
                            <EntryOffset Formula="ECMP_ID%DNX_DATA.l3.ecmp.nof_ecmp_per_bank_of_low_ecmps"/>
                            <HwField Name="RPF_DESTINATION_IS_ECMPf"/>
                        </Memory>
                    </Access>
                </Field>
            </FieldMapping>
        </AppToPhyDbMapping>
    </AppDB>

    <AppDB Name="ECMP_GROUP_PROFILE_TABLE">
        <OneLineDescription>Holds the profiles of the ECMP group, each profile can be used by a several ECMP group and each ECMP hierarchy have a different set of profiles.</OneLineDescription>
        <AccessMethod>HARD_LOGIC</AccessMethod>
        <Maturity Level="HIGH"/>
        <AppDbInterface Type="DIRECT">
            <Key>
                <Field Name="ECMP_GROUP_PROFILE" Size="10"/>
                <Field Name="HIERARCHY_LEVEL" MaxValue="2"/>
            </Key>
            <Result>
                <Field Name="ECMP_MODE"/>
                <Field Name="ECMP_MEMBERS_BASE"/>
                <Field Name="MAX_GROUP_SIZE_MINUS_ONE" Size="8" Type="UINT"/>
                <Field Name="STAT_OBJECT_ID" Size="16"/>
                <Field Name="STAT_OBJECT_CMD"/>
                <Field Name="PROTECTION_ENABLE"/>
                <Field Name="ECMP_RPF_MODE"/>
            </Result>
            <TableLabels>L3</TableLabels>
        </AppDbInterface>
        <AppToPhyDbMapping> 
            <CoreMode Mode="SBC"/>
            <FieldMapping>
                <Field Name="ECMP_MODE">
                    <Access>
                        <Memory Name="IPPD_FEC_ECMP_GROUP_PROFILEm">
                            <ArrayOffset Formula="HIERARCHY_LEVEL"/>
                            <EntryOffset Formula="ECMP_GROUP_PROFILE"/>
                            <HwField Name="ECMP_MODEf"/>
                        </Memory>
                    </Access>
                </Field>
                <Field Name="ECMP_MEMBERS_BASE">
                    <Access>
                        <Memory Name="IPPD_FEC_ECMP_GROUP_PROFILEm"> 
                            <ArrayOffset Formula="HIERARCHY_LEVEL"/>
                            <EntryOffset Formula="ECMP_GROUP_PROFILE"/>
                            <HwField Name="ECMP_MEMBERS_BASEf"/>
                        </Memory>
                    </Access>
                </Field>   
                <Field Name="MAX_GROUP_SIZE_MINUS_ONE">
                    <Access>
                        <Memory Name="IPPD_FEC_ECMP_GROUP_PROFILEm">
                            <ArrayOffset Formula="HIERARCHY_LEVEL"/>
                            <EntryOffset Formula="ECMP_GROUP_PROFILE"/>
                            <HwField Name="MAX_GROUP_SIZE_MINUS_ONEf"/>
                        </Memory>
                    </Access>
                </Field>
                <Field Name="STAT_OBJECT_ID">
                    <Access>
                        <Memory Name="IPPD_FEC_ECMP_GROUP_PROFILEm"> 
                            <ArrayOffset Formula="HIERARCHY_LEVEL"/>
                            <EntryOffset Formula="ECMP_GROUP_PROFILE"/>
                            <HwField Name="STATISTIC_OBJECT_IDf"/>
                        </Memory>
                    </Access>
                </Field>  
                <Field Name="STAT_OBJECT_CMD">
                    <Access>
                        <Memory Name="IPPD_FEC_ECMP_GROUP_PROFILEm">
                            <ArrayOffset Formula="HIERARCHY_LEVEL"/>
                            <EntryOffset Formula="ECMP_GROUP_PROFILE"/>
                            <HwField Name="STATISTIC_OBJECT_PROFILEf"/>
                        </Memory>
                    </Access>
                </Field>
                <Field Name="PROTECTION_ENABLE">
                    <Access>
                        <Memory Name="IPPD_FEC_ECMP_GROUP_PROFILEm"> 
                            <ArrayOffset Formula="HIERARCHY_LEVEL"/>
                            <EntryOffset Formula="ECMP_GROUP_PROFILE"/>
                            <HwField Name="PROTECTION_FLAGf"/>
                        </Memory>
                    </Access>
                </Field>
                <Field Name="ECMP_RPF_MODE">
                    <Access>
                        <Memory Name="IPPD_FEC_ECMP_RPF_MODEm"> 
                            <ArrayOffset Formula="HIERARCHY_LEVEL"/>
                            <EntryOffset Formula="ECMP_GROUP_PROFILE"/>
                            <HwField Name="RPF_MODEf"/>
                        </Memory>
                    </Access>
                </Field>     
            </FieldMapping>
        </AppToPhyDbMapping>
    </AppDB>

    <AppDB Name="L3_GENERAL_CONFIGURATION">
