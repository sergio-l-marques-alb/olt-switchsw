        <AccessMethod>HARD_LOGIC</AccessMethod>
        <Maturity Level="HIGH"/>
        <AppDbInterface Type="DIRECT">
            <Key>
            </Key>
            <Result>
                <Field Name="DEFAULT_ROUTE_STRICT_RPF" Type="BOOL" Size="1" Description="Indicates whether default routing is allowed or not for Strict UC RPF"/>
                <Field Name="DEFAULT_ROUTE_LOOSE_RPF" Type="BOOL" Size="1" Description="Indicates whether default routing is allowed or not for Loose UC RPF"/>
