<?xml version="1.0"?>
<device_data lib="dnx_data" module="port" bsl_flag="BSL_LS_BCMDNX_PORT">
    <includes>
        <include>bcm/port.h</include>
        <include>bcm_int/dnx/algo/port/algo_port_mgmt.h</include>
        <include>soc/dnxc/legacy/dnxc_port.h</include>
    </includes>
    
    <!-- must be first -->
    <sub_module name="static_add" doc="adding port statically">
        <defines>
            <define name="default_speed_for_special_if" doc="default speed in kbps for special interfaces (tm ports excluding NIF)"></define>
        </defines>
        
        <tables>
            <!-- must be first -->
            <table name="ucode_port" doc="static port configuration">
                <key name="port" doc="logical port"></key>
                <value name="interface" type="bcm_port_if_t" doc="port interface"></value>
                <value name="nof_lanes" type="int" doc="port number of lanes"></value>
                <value name="interface_offset" type="int" doc="interface offset"></value>
                <value name="core" type="bcm_core_t" doc="core id"></value>
                <value name="tm_port" type="int" doc="tm port"></value>
                <value name="channel" type="int" doc="channel id"></value>
                <value name="is_stif" type="int" doc="true iff it is statistic interface port"></value>
                <value name="is_kbp" type="int" doc="true iff it is kbp port"></value>
                <value name="tdm_mode" type="dnx_algo_port_tdm_mode_e" doc="tdm mode of a port - see dnx_algo_port_tdm_mode_e"></value>
                <value name="num_priorities" type="int" doc="number of port priorities"></value>
                <value name="base_q_pair" type="int" doc="should be used just in case the user need to exlictly pick the base queue pair"></value>
            </table>
        
            <table name="speed" doc="per port speed">
                <key name="port" doc="logical port number"></key>
                <value name="val" type="int" doc="speed value in mbps"></value>
            </table>
            <table name="ext_stat_speed" doc="per external kbp stat port speed">
                <key name="ext_stat_port" doc="external device (kbp) statistics port number"></key>
                <value name="speed" type="int" doc="speed value in mbps"></value>
                <value name="nof_lanes" type="int" doc="port number of lanes"></value>
            </table>
            <table name="eth_padding" doc="eth ports padding">
                <key name="port" doc="logical port number"></key>
                <value name="pad_size" type="int" doc="packets smaller than min size value are padded with this value"></value>
            </table>

            <table name="link_training" doc="per port link training (CL72)">
                <key name="port" doc="logical port number"></key>
                <value name="val" type="int" doc="Is CL72 is enabled"></value>
            </table>

            <table name="ext_stat_link_training" doc="per external kbp stat port link training (CL72)">
                <key name="ext_stat_port" doc="external device (kbp) statistics port number"></key>
                <value name="val" type="int" doc="Is CL72 is enabled"></value>
            </table>
			
            <table name="fec_type" doc="per port FEC type">
                <key name="port" doc="logical port number"></key>
                <value name="val" type="bcm_port_phy_fec_t" doc="FEC type"></value>
            </table>

            <table name="serdes_lane_config" doc="serdes lane configurations, related to firmware">
                <key name="port" doc="logical port number"></key>
                <value name="dfe" type="soc_dnxc_port_dfe_mode_t" doc="dfe filter"></value>
                <value name="media_type" type="int" doc="media type"></value>
                <value name="unreliable_los" type="int" doc="unreliable los"></value>
                <value name="cl72_auto_polarity_enable" type="int" doc="cl72 auto polarity"></value>
                <value name="cl72_restart_timeout_enable" type="int" doc="cl72 restart timeout"></value>
                <value name="channel_mode" type="soc_dnxc_port_channel_mode_t" doc="force nr or force er"></value>
            </table>

            <table name="serdes_tx_taps" doc="PHY TX tap configuration">
                <key name="port" doc="logical port number"></key>
                <value name="pre" type="int" doc="Tx fir pre tap"></value>
                <value name="main" type="int" doc="Tx fir main tap"></value>
                <value name="post" type="int" doc="Tx fir post tap"></value>
                <value name="pre2" type="int" doc="Tx fir pre2 tap"></value>
                <value name="post2" type="int" doc="Tx fir post2 tap"></value>
                <value name="post3" type="int" doc="Tx fir post3 tap"></value>
                <value name="tx_tap_mode" type="bcm_port_phy_tx_tap_mode_t" doc="Tx fir tap mode"></value>
                <value name="signalling_mode" type="bcm_port_phy_signalling_mode_t" doc="Signalling Mode, NRZ or PAM4"></value>
            </table>

            <table name="tx_pam4_precoder" doc="is the precoding enabled on TX side">
                <key name="port" doc="logical port number"></key>
                <value name="val" type="uint32" doc="TX PAM4 Precoder"></value>
            </table>

            <table name="lp_tx_precoder" doc="has the link partner enabled pre-coding on its TX side. In other words - enable the decoding on my RX side.">
                <key name="port" doc="logical port number"></key>
                <value name="val" type="uint32" doc="Link Partner TX Precoder"></value>
            </table>

            <table name="fabric_quad_info" doc="General fabric quad info">
                <key name="quad" doc="Quad ID"></key>
                <value name="quad_enable" type="int" doc="Is the quad enabled"></value>
            </table>
            
            <table name="header_type" doc="header type information">
                <key name="port" doc="port"></key>
                <value name="header_type_in" type="int" doc="header type per incoming port"></value>
                <value name="header_type_out" type="int" doc="header type per outgoing port"></value>
                <value name="header_type" type="int" doc="header type per incoming/outgoing port"></value>
            </table>

            <table name="erp_exist" doc="Is ERP port defined in config file for the core">
                <key name="core" doc="core"></key>
                <value name="exist" type="int" doc="does epr exist on this core"></value>
            </table>


        </tables>

        <numerics>
            <numeric name="fabric_fw_load_method" doc="Method of the Fabric firmware load"></numeric>
            <numeric name="fabric_fw_load_verify" doc="Fabric firmware load verification method"></numeric>
            <numeric name="nif_fw_load_method" doc="Method of the Nif firmware load"></numeric>
        </numerics>

    </sub_module>
    
    <sub_module name="general" doc="general ports data">
        
        <features>
        </features>
        
        <defines>
            <define name="nof_tm_ports" doc="nof tm ports per core"></define>
            <define name="erp_tm_port" doc="tm port reserved for ERP"></define>
            <define name="reserved_tm_port" doc="tm port reserved for redirection of returned credits in LAG SCH"></define>
            <define name="nof_pp_ports" doc="nof pp ports per core"></define>
            <define name="nof_pms" doc="Number of port macros overall in the system"></define>         
            <define name="max_nof_channels" doc="max nof channel in an interface"></define>
            <define name="fabric_phys_offset" doc="Offset for physical fabric ports"></define>
             <!-- FIXME: SDK-139343 Remove DNX data for tm_port/pp_port/vlan domain size-->
            <define name="tm_port_size" doc="define the size of the tm port (in bits)"></define>
            <define name="pp_port_size" doc="define the size of the pp port (in bits)"></define>
            <define name="pp_dsp_size" doc="define the size of the pp dsp (in bits)"></define>
            <define name="vlan_domain_size" doc="define the size of the vlan domain (in bits)"></define>
            <define name="nof_vlan_membership_if" doc="number of vlan_membership_if"></define>
            <define name="ffc_instruction_size" doc="define the size of the ffc instruction (in bits)"></define>
        </defines>
        
        <numerics>
            <numeric name="fabric_port_base" doc="first fabric logical port"></numeric>
            <numeric name="dynamic_port_enable" doc="dynamic port"></numeric>
        </numerics>

    </sub_module>

    <sub_module name="egress" doc="egress related data">
        <defines>
            <define name="nof_ifs" doc="nof egress intrfaces per core"></define>
        </defines>
    </sub_module>

</device_data>




