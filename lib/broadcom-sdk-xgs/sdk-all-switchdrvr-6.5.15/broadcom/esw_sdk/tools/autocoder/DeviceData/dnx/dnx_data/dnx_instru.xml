<?xml version="1.0"?>
<device_data lib="dnx_data" module="instru" bsl_flag="BSL_LS_BCMDNX_INSTRU">
    <includes>
        <include>bcm/instru.h</include>
    </includes>
    <sub_module name="ipt" doc="IPT (tail-edit, INT) module">

        <defines>
        </defines>
        
        <tables>
            <table name="profile_info" doc="per ipt profile information">
                <key name="profile_id" doc="profile index"></key>
                <value name="type" type="bcm_instru_ipt_node_type_t" doc="type of the ipt profile"></value>
            </table>
            
            <table name="metadata" doc="Translate API metadata flag ID to HW values (bit index, size in bytes, etc...)">
                <key name="flag_id" doc="running index (API flag ID)"></key>
                <value name="bit" type="uint32" doc="HW bit id"></value>
                <value name="size" type="uint32" doc="field length in bytes"></value>
            </table>            
        </tables>

    </sub_module>
    
    <sub_module name="sflow" doc="sFlow module">
        <defines>
            <define name="max_nof_sflow_encaps" doc="Maximum number of possible sFlow encap entries"></define>
            <define name="nof_sflow_raw_entries_per_stack" doc="Number of RAW entries used per sFlow ETPS stack"></define>
        </defines>
    </sub_module>

</device_data>





